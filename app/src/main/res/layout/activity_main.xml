<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/testFragment"
        android:text="TEST FRAGMENT"
        android:layout_centerHorizontal="true"
        android:textSize="40sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtPoint"
        android:layout_alignParentBottom="true"
        android:text="20"
        android:textSize="100sp"
        android:textColor="#fa0112"
        android:layout_centerHorizontal="true"/>

    <fragment
        android:id="@+id/fragmentPlus"
        android:name="com.example.duongtainhan555.fragmentdata.FragmentPlus"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp" />
    <fragment
        android:id="@+id/fragmentMinus"
        android:layout_below="@id/fragmentPlus"
        android:name="com.example.duongtainhan555.fragmentdata.FragmentMinus"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="230dp" />


</RelativeLayout>